/* Inter */
@font-face {
  font-family: 'Inter';
  src: local('Inter Regular'), local('Inter-Regular'),
          url('~/assets/fonts/Inter/Inter-Regular.woff2') format('woff2'),
          url('~/assets/fonts/Inter/Inter-Regular.woff') format('woff'),
          url('~/assets/fonts/Inter/Inter-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Inter';
  src: local('Inter Bold'), local('Inter-Bold'),
          url('~/assets/fonts/Inter/Inter-Bold.woff2') format('woff2'),
          url('~/assets/fonts/Inter/Inter-Bold.woff') format('woff'),
          url('~/assets/fonts/Inter/Inter-Bold.ttf') format('truetype');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

/* Geologica */
@font-face {
  font-family: 'Geologica';
  src: local('Geologica Black'), local('Geologica-Black'),
    url('~/assets/fonts/Geologica/GeologicaRoman-Black.woff2') format('woff2'),
    url('~/assets/fonts/Geologica/GeologicaRoman-Black.woff') format('woff'),
    url('~/assets/fonts/Geologica/GeologicaRoman-Black.ttf') format('truetype');
  font-weight: 900;
  font-style: normal;
  font-display: swap;
}
