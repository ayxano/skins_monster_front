:root {
  --main-width: 1414px
  --small-width: 1070px
  --font-regular: 'Inter', Arial, Helvetica Neue, Helvetica, sans-serif
  --font-bold: 'Geologica', Arial, Helvetica Neue, Helvetica, sans-serif
  --font-size-desktop: 16px;

  --black: #000000
  --black-o1: rgba(#000000, 0.1)
  --black-o3: rgba(#000000, 0.3)
  --black-o5: rgba(#000000, 0.5)
  --gray-5: #F5F7F9
  --gray-10: #F2F5F7
  --gray-20: #EDEDED
  --gray-25: #FBFBFB
  --gray-30: #E3E3E3 // #E0E0E0
  --gray-40: #D2D2D2
  --gray-50: #9D9D9D
  --gray-60: #DCDCDC
  --gray-70: #D9D9D9
  --gray-90: #292929
  --gray-dark: #828282
  --green-100: #E9FBEC
  --green-500: #154F07
  --green-900: #12230A
  --theme-body: #292929
  --dark: #4F4F4F
  --dark-2: #2B2D33
  --red: #F70926
  --red-darker: #D70821
  --red-dark: #C5081F
  --red-light: #FDCED4
  --pink: #FDEBEB
  --pink-light: #F9F5F5
  --rose-50: #FBE9F4
  --white: #FFFFFF
  --white-o8: rgba(#FFFFFF, 0.8)
  --yellow-light: #F6F3CF
  --blue: #1A5BD9
  --blue-light: #29A9E0
  --link: #007AFF
  --aqua: #4AC4D6
  --blue-green: #1D98A7
  --blue-green-o1: rgba(#1D98A7, 0.1)
  --main: var(--red)
  --main-darker: var(--red-darker)
  --main-dark: var(--red-dark)
  --main-light: var(--red-light)
  --border-color: var(--text-disabled)

  // text colors
  --text-black: #1C1D1F
  --text-disabled: #C3C3C3
  --text-gray: #6F6F6F
  --text-gray-2: #A3A3A3

  --body-color: var(--text-black)
  --bg-color: var(--white)

  --big-radius: 20px
  --main-radius: 10px
  --small-radius: 5px
  --transition: 0.3s
  --sides-padding: 22px
  --header-main-height: 80px
  --navigation-bar-height: 70px
  --scrollbar-width: 17px
  --btn-sm-height: 32px
  --btn-md-height: 38px
  --btn-lg-height: 52px
  --gap: 30px
  +below(1024px) {
    --header-main-height: 70px
  }
  +below(540px) {
    --gap: 15px
    --sides-padding: 20px
    --navigation-bar-height: 64px
  }
  +below(370px) {
    --navigation-bar-height: 60px
  }

  // indexes
  --z-index-header: 20
  --z-index-overlay: 15
  --z-index-navbar: 10
  --z-index-modal: 999
}
